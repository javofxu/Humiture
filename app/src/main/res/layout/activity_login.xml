<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="245dp">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/login_top" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/login_app"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_35"
        android:layout_marginRight="@dimen/margin_35"
        android:layout_marginLeft="@dimen/margin_35"
        android:orientation="vertical"
        android:layout_weight="3">

        <com.example.custom.CustomEditText
            android:id="@+id/edt_login_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            app:contents=""
            app:isEyeShow="false"
            app:hintText="@string/login_name"
            app:icon_normal="@mipmap/login_name"
            app:icon_selected="@mipmap/login_name"
            app:isPassword="false" >

        </com.example.custom.CustomEditText>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffc6c8c9"
            android:layout_marginTop="@dimen/margin_10"/>

        <com.example.custom.CustomEditText
            android:id="@+id/edt_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:layout_marginTop="@dimen/margin_10"
            app:contents=""
            app:isEyeShow="true"
            app:hintText="@string/login_pwd"
            app:icon_normal="@mipmap/login_pwd"
            app:icon_selected="@mipmap/login_pwd"
            app:isPassword="true">

        </com.example.custom.CustomEditText>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/login_btn_background"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_50"
            android:textColor="#ffffffff"
            android:textSize="17sp"
            android:text="登录"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10">

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="立即注册"
                android:textColor="#ffb6b6b6"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/tv_forgetpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="忘记密码"
                android:textColor="#ffb6b6b6"
                android:textSize="10sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffc6c8c9"
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#fff"
                android:text="其他快捷登录"
                android:textColor="#ffb6b6b6"
                android:textSize="10sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="50dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:paddingRight="@dimen/margin_120"
                android:src="@mipmap/login_face"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:paddingLeft="@dimen/margin_120"
                android:src="@mipmap/login_finger"/>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
