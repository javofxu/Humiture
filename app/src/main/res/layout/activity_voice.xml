<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".ui.activity.VoiceActivity">

    <TextView
        android:id="@+id/voice_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base"
        android:layout_marginTop="@dimen/margin_50"
        android:textSize="@dimen/text_20"
        android:textColor="@color/white"
        android:text="@string/voice_title"/>

    <com.example.humiture.ui.view.WaveView
        android:id="@+id/voice_wave"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:id="@+id/voice_speech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/base"
        android:src="@mipmap/speech_control_click"/>
</RelativeLayout>