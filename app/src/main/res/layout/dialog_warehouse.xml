<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_warehouse_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textStyle_18sp"
        android:textStyle="bold"
        android:layout_margin="@dimen/base"
        android:text="@string/index_warehouse"/>
    <LinearLayout
        android:id="@+id/dialog_chose"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/base_text"
        android:text="@string/confirm"
        android:textStyle="bold"
        android:layout_gravity="right"
        android:layout_margin="@dimen/base"
        android:textColor="@color/index_title"/>
</LinearLayout>